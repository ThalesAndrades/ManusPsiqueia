// MARK: - Build Settings
MARKETING_VERSION = 1.0.0
CURRENT_PROJECT_VERSION = $(BUILD_NUMBER)
BUILD_ENVIRONMENT = Staging
DEBUG_BUILD = NO

// MARK: - App Configuration
APP_DISPLAY_NAME = ManusPsiqueia Beta
BUNDLE_ID_SUFFIX = .beta
PRODUCT_BUNDLE_IDENTIFIER = com.ailun.manuspsiqueia$(BUNDLE_ID_SUFFIX)

// MARK: - API Configuration
API_BASE_URL = https://api-staging.manuspsiqueia.com
API_VERSION = v1

// MARK: - Stripe Configuration
STRIPE_PUBLISHABLE_KEY = $(STRIPE_PUBLISHABLE_KEY_STAGING)
STRIPE_WEBHOOK_ENDPOINT = https://api-staging.manuspsiqueia.com/webhooks/stripe

// MARK: - Supabase Configuration
SUPABASE_URL = $(SUPABASE_URL_STAGING)
SUPABASE_ANON_KEY = $(SUPABASE_ANON_KEY_STAGING)

// MARK: - OpenAI Configuration
OPENAI_API_KEY = $(OPENAI_API_KEY_STAGING)
OPENAI_API_ENDPOINT = https://api.openai.com/v1
OPENAI_MODEL = gpt-4

// MARK: - Feature Flags
ENABLE_DEBUG_MENU = YES
ENABLE_ANALYTICS = YES
ENABLE_CRASH_REPORTING = YES
ENABLE_LOGGING = YES

// MARK: - Security Configuration
CERTIFICATE_PINNING_ENABLED = YES
NETWORK_SECURITY_LEVEL = HIGH

// MARK: - Build Configuration
SWIFT_ACTIVE_COMPILATION_CONDITIONS = STAGING
GCC_PREPROCESSOR_DEFINITIONS = STAGING=1
SWIFT_OPTIMIZATION_LEVEL = -O
GCC_OPTIMIZATION_LEVEL = s

// MARK: - Code Signing (Distribution)
CODE_SIGN_STYLE = Automatic
DEVELOPMENT_TEAM = $(DEVELOPMENT_TEAM_ID)
PROVISIONING_PROFILE_SPECIFIER = 
CODE_SIGN_IDENTITY = Apple Distribution

// MARK: - Deployment Target
IPHONEOS_DEPLOYMENT_TARGET = 16.0
TARGETED_DEVICE_FAMILY = 1,2
ARCHS = $(ARCHS_STANDARD)
VALID_ARCHS = arm64 arm64e

// MARK: - TestFlight Configuration
ENABLE_BITCODE = NO
VALIDATE_PRODUCT = YES
SKIP_INSTALL = NO
ENABLE_TESTABILITY = YES
INSTALL_PATH = /Applications

// MARK: - App Store Connect Configuration
ASSETCATALOG_COMPILER_APPICON_NAME = AppIcon
ASSETCATALOG_COMPILER_GLOBAL_ACCENT_COLOR_NAME = AccentColor

// MARK: - Other Settings
OTHER_LDFLAGS = $(inherited) -ObjC
DEAD_CODE_STRIPPING = YES
STRIP_INSTALLED_PRODUCT = YES
